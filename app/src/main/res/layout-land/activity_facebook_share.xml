<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/facebook_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.admin.vkreader.activity.FacebookShareActivity">

    <fragment
        android:id="@+id/facebook_fragment"
        class="com.example.admin.vkreader.fragments.FacebookFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_facebook"></fragment>

    <FrameLayout
        android:id="@+id/frame_facebook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/app_blue"></FrameLayout>

</LinearLayout>
